// MARK: - 1. Real-Time Packet Flow Animation

struct PacketFlowAnimationView: View {
    let devices: [EnhancedDevice]
    @StateObject private var trafficAnalyzer = NetworkTrafficAnalyzer.shared
    @State private var animationPhase: Double = 0

    var body: some View {
        VStack(alignment: .leading, spacing: 16) {
            Text("LIVE PACKET FLOW")
                .font(.system(size: 24, weight: .bold, design: .monospaced))
                .foregroundColor(LCARSColors.orange)
                .padding(.horizontal, 20)

            ZStack {
                // Background
                Rectangle()
                    .fill(Color.black.opacity(0.95))
                    .cornerRadius(20)

                // Device nodes
                ForEach(Array(devices.prefix(20).enumerated()), id: \.element.id) { index, device in
                    DeviceNode(
                        device: device,
                        position: nodePosition(for: index, total: min(devices.count, 20))
                    )
                }

                // Connection lines with animation
                ForEach(trafficAnalyzer.activeConnections.prefix(50)) { connection in
                    ConnectionLineIfValid(
                        connection: connection,
                        devices: devices,
                        animationPhase: animationPhase,
                        nodePosition: nodePosition
                    )
                }
            }
            .frame(height: 500)
            .onAppear {
                withAnimation(.linear(duration: 2.0).repeatForever(autoreverses: false)) {
                    animationPhase = 1.0
                }
            }
        }
        .padding(24)
        .background(LCARSColors.panelBackground)
        .cornerRadius(20)
    }

    private func nodePosition(for index: Int, total: Int) -> CGPoint {
        let angle = (Double(index) / Double(total)) * 2 * .pi
        let radius = 200.0
        return CGPoint(
            x: 300 + radius * cos(angle),
            y: 250 + radius * sin(angle)
        )
    }
}

struct ConnectionLineIfValid: View {
    let connection: NetworkConnection
    let devices: [EnhancedDevice]
    let animationPhase: Double
    let nodePosition: (Int, Int) -> CGPoint

    var body: some View {
        if let sourceIndex = devices.firstIndex(where: { $0.ipAddress == connection.localEndpoint }),
           let destIndex = devices.firstIndex(where: { $0.ipAddress == connection.remoteEndpoint }) {
            AnimatedConnectionLine(
                from: nodePosition(sourceIndex, min(devices.count, 20)),
                to: nodePosition(destIndex, min(devices.count, 20)),
                bandwidth: Int(connection.bytesOut + connection.bytesIn),
                protocolType: connection.protocolType,
                animationPhase: animationPhase
            )
        } else {
            EmptyView()
        }
    }
}

struct DeviceNode: View {
    let device: EnhancedDevice
    let position: CGPoint

    var body: some View {
        ZStack {
            Circle()
                .fill(device.isOnline ? Color.green : Color.gray)
                .frame(width: 30, height: 30)
                .shadow(color: device.isOnline ? .green : .gray, radius: 8)

            if device.openPorts.count > 5 {
                Circle()
                    .stroke(Color.red, lineWidth: 3)
                    .frame(width: 36, height: 36)
            }
        }
        .position(position)
    }
}

struct AnimatedConnectionLine: View {
    let from: CGPoint
    let to: CGPoint
    let bandwidth: Int
    let protocolType: String
    let animationPhase: Double

    var lineColor: Color {
        switch protocolType.uppercased() {
        case "HTTP": return .green
        case "HTTPS": return .blue
        case "SSH": return .orange
        case "FTP": return .yellow
        case "DNS": return .purple
        default: return .white
        }
    }

    var body: some View {
        Path { path in
            path.move(to: from)
            path.addLine(to: to)
        }
        .stroke(
            lineColor.opacity(0.6),
            style: StrokeStyle(
                lineWidth: max(2, min(10, Double(bandwidth) / 100000)),
                lineCap: .round,
                dash: [10, 5],
                dashPhase: animationPhase * 15
            )
        )
        .shadow(color: lineColor.opacity(0.4), radius: 4)
    }
}

// MARK: - 2. Attack Kill Chain Timeline

struct AttackKillChainTimeline: View {
    @StateObject private var vulnerabilityScanner = VulnerabilityScanner()
    @StateObject private var anomalyManager = AnomalyDetectionManager.shared

    var killChainStages: [(stage: String, status: KillChainStatus, icon: String)] {
        [
            ("Reconnaissance", detectReconnaissance(), "magnifyingglass"),
            ("Weaponization", .notDetected, "hammer.fill"),
            ("Delivery", .notDetected, "paperplane.fill"),
            ("Exploitation", detectExploitation(), "bolt.fill"),
            ("Installation", .notDetected, "arrow.down.circle.fill"),
            ("Command & Control", detectC2(), "antenna.radiowaves.left.and.right"),
            ("Actions on Objectives", .notDetected, "target")
        ]
    }

    var body: some View {
        VStack(alignment: .leading, spacing: 16) {
            Text("MITRE ATT&CK KILL CHAIN")
                .font(.system(size: 24, weight: .bold, design: .monospaced))
                .foregroundColor(LCARSColors.orange)
                .padding(.horizontal, 20)

            HStack(spacing: 8) {
                ForEach(Array(killChainStages.enumerated()), id: \.offset) { index, stage in
                    VStack(spacing: 8) {
                        // Stage indicator
                        ZStack {
                            Circle()
                                .fill(stage.status.color)
                                .frame(width: 60, height: 60)
                                .shadow(color: stage.status.color.opacity(0.6), radius: 8)

                            Image(systemName: stage.icon)
                                .font(.system(size: 24))
                                .foregroundColor(.white)
                        }

                        // Stage name
                        Text(stage.stage)
                            .font(.system(size: 11, weight: .medium, design: .monospaced))
                            .foregroundColor(LCARSColors.paleOrange)
                            .multilineTextAlignment(.center)
                            .frame(width: 100)
                    }

                    if index < killChainStages.count - 1 {
                        // Connector arrow
                        Image(systemName: "arrow.right")
                            .font(.system(size: 20))
                            .foregroundColor(LCARSColors.blue)
                            .padding(.horizontal, 4)
                    }
                }
            }
            .padding(20)
        }
        .padding(24)
        .background(LCARSColors.panelBackground)
        .cornerRadius(20)
    }

    private func detectReconnaissance() -> KillChainStatus {
        let portScans = anomalyManager.anomalies.filter { $0.type == .newOpenPorts }
        return portScans.count > 5 ? .detected : .notDetected
    }

    private func detectExploitation() -> KillChainStatus {
        let criticalVulns = vulnerabilityScanner.vulnerabilities.filter { $0.severity == .critical }
        return !criticalVulns.isEmpty ? .detected : .notDetected
    }

    private func detectC2() -> KillChainStatus {
        // Placeholder - would check for beaconing patterns
        return .notDetected
    }
}

enum KillChainStatus {
    case notDetected, detected, inProgress

    var color: Color {
        switch self {
        case .notDetected: return LCARSColors.blue
        case .detected: return LCARSColors.red
        case .inProgress: return LCARSColors.yellow
        }
    }
}

