// MARK: - 9. Network Segmentation Visualizer

struct NetworkSegmentationVisualizer: View {
    @StateObject private var segmentationManager = NetworkSegmentationAnalyzer.shared

    var body: some View {
        VStack(alignment: .leading, spacing: 16) {
            Text("NETWORK SEGMENTATION")
                .font(.system(size: 24, weight: .bold, design: .monospaced))
                .foregroundColor(LCARSColors.orange)
                .padding(.horizontal, 20)

            HStack(spacing: 16) {
                ForEach(segmentationManager.segments) { segment in
                    SegmentCard(segment: segment)
                }
            }
            .padding(20)

            // Violations
            if !segmentationManager.violations.isEmpty {
                VStack(alignment: .leading, spacing: 8) {
                    Text("⚠️ SEGMENTATION VIOLATIONS")
                        .font(.system(size: 16, weight: .bold, design: .monospaced))
                        .foregroundColor(LCARSColors.red)

                    ForEach(segmentationManager.violations.prefix(5)) { violation in
                        Text("• \(violation.description)")
                            .font(.system(size: 12, design: .monospaced))
                            .foregroundColor(LCARSColors.paleOrange)
                    }
                }
                .padding(20)
            }
        }
        .padding(24)
        .background(LCARSColors.panelBackground)
        .cornerRadius(20)
    }
}

struct SegmentCard: View {
    let segment: NetworkSegment

    var segmentColor: Color {
        switch segment.securityLevel {
        case .high: return LCARSColors.blue
        case .medium: return LCARSColors.yellow
        case .low: return LCARSColors.orange
        case .dmz: return LCARSColors.purple
        case .iot: return LCARSColors.red
        }
    }

    var segmentIcon: String {
        switch segment.securityLevel {
        case .high: return "shield.fill"
        case .medium: return "shield.lefthalf.filled"
        case .low: return "shield.slash.fill"
        case .dmz: return "network"
        case .iot: return "sensor.fill"
        }
    }

    var body: some View {
        VStack(alignment: .leading, spacing: 8) {
            HStack {
                Image(systemName: segmentIcon)
                    .font(.system(size: 24))
                    .foregroundColor(segmentColor)

                Spacer()

                Text(segment.securityLevel.rawValue)
                    .font(.system(size: 11, weight: .bold, design: .monospaced))
                    .foregroundColor(.white)
                    .padding(.horizontal, 8)
                    .padding(.vertical, 4)
                    .background(segmentColor)
                    .cornerRadius(6)
            }

            Text(segment.name)
                .font(.system(size: 14, weight: .semibold, design: .monospaced))
                .foregroundColor(LCARSColors.paleOrange)

            Text(segment.cidr)
                .font(.system(size: 11, design: .monospaced))
                .foregroundColor(LCARSColors.blue)

            Text(segment.purpose)
                .font(.system(size: 10, design: .monospaced))
                .foregroundColor(LCARSColors.paleOrange)
                .lineLimit(2)
        }
        .padding(16)
        .frame(maxWidth: .infinity)
        .background(segmentColor.opacity(0.1))
        .cornerRadius(12)
        .overlay(
            RoundedRectangle(cornerRadius: 12)
                .stroke(segmentColor, lineWidth: 2)
        )
    }
}

