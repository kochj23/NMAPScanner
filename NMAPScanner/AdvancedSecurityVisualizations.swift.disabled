struct ComplianceGauge: View {
    let framework: String
    let score: Int
    let passed: Int
    let total: Int

    @State private var animatedScore: Double = 0

    var gaugeColor: Color {
        switch score {
        case 90...100: return LCARSColors.blue
        case 70..<90: return LCARSColors.yellow
        default: return LCARSColors.red
        }
    }

    var body: some View {
        VStack(spacing: 12) {
            ZStack {
                Circle()
                    .stroke(LCARSColors.panelBackground, lineWidth: 15)
                    .frame(width: 150, height: 150)

                Circle()
                    .trim(from: 0, to: animatedScore / 100)
                    .stroke(gaugeColor, style: StrokeStyle(lineWidth: 15, lineCap: .round))
                    .frame(width: 150, height: 150)
                    .rotationEffect(.degrees(-90))
                    .shadow(color: gaugeColor.opacity(0.6), radius: 8)

                VStack(spacing: 4) {
                    Text("\(Int(animatedScore))%")
                        .font(.system(size: 32, weight: .bold, design: .monospaced))
                        .foregroundColor(gaugeColor)

                    Text("\(passed)/\(total)")
                        .font(.system(size: 14, design: .monospaced))
                        .foregroundColor(LCARSColors.blue)
                }
            }

            Text(framework)
                .font(.system(size: 18, weight: .bold, design: .monospaced))
                .foregroundColor(LCARSColors.paleOrange)
        }
        .onAppear {
            withAnimation(.easeInOut(duration: 1.5)) {
                animatedScore = Double(score)
            }
        }
    }
}

