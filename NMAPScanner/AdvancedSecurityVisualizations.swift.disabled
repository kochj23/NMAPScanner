struct CertificateCard: View {
    let certificate: CertificateInfo

    var daysUntilExpiry: Int {
        Calendar.current.dateComponents([.day], from: Date(), to: certificate.expirationDate).day ?? 0
    }

    var statusColor: Color {
        if certificate.isSelfSigned { return LCARSColors.red }
        if daysUntilExpiry < 30 { return LCARSColors.red }
        if daysUntilExpiry < 90 { return LCARSColors.yellow }
        return LCARSColors.blue
    }

    var body: some View {
        VStack(alignment: .leading, spacing: 8) {
            HStack {
                Image(systemName: certificate.isSelfSigned ? "exclamationmark.shield.fill" : "lock.shield.fill")
                    .font(.system(size: 24))
                    .foregroundColor(statusColor)

                Spacer()

                Text("\(daysUntilExpiry)d")
                    .font(.system(size: 16, weight: .bold, design: .monospaced))
                    .foregroundColor(statusColor)
            }

            Text(certificate.host)
                .font(.system(size: 14, weight: .semibold, design: .monospaced))
                .foregroundColor(LCARSColors.paleOrange)
                .lineLimit(1)

            Text(certificate.commonName ?? "Unknown")
                .font(.system(size: 11, design: .monospaced))
                .foregroundColor(LCARSColors.blue)
                .lineLimit(2)

            if certificate.isSelfSigned {
                Text("SELF-SIGNED")
                    .font(.system(size: 10, weight: .bold, design: .monospaced))
                    .foregroundColor(.white)
                    .padding(.horizontal, 6)
                    .padding(.vertical, 2)
                    .background(LCARSColors.red)
                    .cornerRadius(4)
            }
        }
        .padding(12)
        .background(statusColor.opacity(0.1))
        .cornerRadius(12)
        .overlay(
            RoundedRectangle(cornerRadius: 12)
                .stroke(statusColor, lineWidth: 2)
        )
    }
}

