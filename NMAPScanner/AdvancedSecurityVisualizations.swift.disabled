struct ConnectionArc: View {
    let from: CGPoint
    let to: CGPoint
    let threatLevel: ThreatLevel

    var body: some View {
        Path { path in
            let controlPoint = CGPoint(
                x: (from.x + to.x) / 2,
                y: min(from.y, to.y) - 50
            )
            path.move(to: from)
            path.addQuadCurve(to: to, control: controlPoint)
        }
        .stroke(threatLevel.color.opacity(0.6), lineWidth: 2)
        .shadow(color: threatLevel.color.opacity(0.4), radius: 4)
    }
}

